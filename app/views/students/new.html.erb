<h1>Student New Form</h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
        <p style="color: red"><%= error%></p>
    <%end%>
<%end%>
<%= form_for @student do |f| %>
    <%= f.label 'Name'%>
    <%= f.text_field :name %>
    <%= f.label 'Student Age'%>
    <%= f.text_field :age %>
    <%= f.submit 'Create Student'%>
    <% end %>